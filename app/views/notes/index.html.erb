<h1>Listing notes</h1>

<table>
  <tr>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.text %></td>
    <td><%= link_to 'Show', subject_topic_note_path(@subject.id, @topic.id, note.id) %></td>
    <td><%= link_to 'Edit', edit_subject_topic_note_path(@subject.id, @topic.id, note.id) %></td>
    <td><%= link_to 'Destroy', [@subject, @topic, note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

