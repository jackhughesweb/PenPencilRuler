<%= link_to raw('&larr; Back to Topics'), subject_topics_path(@subject), class: "button" %>
<br>
<br>
<% @notes.each do |note| %>
    <article class="note">
      <strong><%= note.title %></strong>
      <%= link_to 'Edit', edit_subject_topic_note_path(@subject, @topic, note) %>
      <br>
      <br>
      <%= markdown(note.text) %>
    </article>
    <br>
    <br>
<% end %>
<%= link_to '+ New Note', new_subject_topic_note_path(@subject, @topic), class: "button" %>
