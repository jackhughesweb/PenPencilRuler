<h1>Listing topics</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.name %></td>
    <td><%= link_to 'Show', subject_topic_path(topic.subject_id, topic.id) %></td>
    <td><%= link_to 'Edit', edit_subject_topic_path(topic.subject_id, topic.id) %></td>
    <td><%= link_to 'Destroy', [@subject, topic], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

